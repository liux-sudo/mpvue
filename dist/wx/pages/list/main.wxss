
.list swiper {
  width: 100%;
  height: 400rpx;
}
.list swiper swiper-item ._img {
  width: 100%;
  height: 100%;
}
.listTem {
  border-bottom: 1rpx solid #f2f2f2;
  box-sizing: border-box;
  padding-bottom: 10rpx;
}
.list_content_header {
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  padding: 15rpx;
  display: flex;
  align-items: center;
}
.list_content_header ._img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.list_title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}
.list_img {
  width: 100%;
  height: 400rpx;
}
.list_content {
  font-size: 30rpx;
  color: #999;
  text-indent: 30rpx;
  text-align: justify;
}
.list_footer {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin-top: 6rpx;
}
.list_footer ._img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}
.list_footer .sc {
  margin-right: 15rpx;
}